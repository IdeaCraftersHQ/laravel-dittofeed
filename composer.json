{
    "name": "ideacrafters/laravel-dittofeed",
    "description": "Laravel SDK for Dittofeed - Open-source customer engagement platform for event tracking, user identification, and marketing automation",
    "keywords": [
        "ideacrafters",
        "laravel",
        "dittofeed",
        "customer-engagement",
        "analytics",
        "marketing",
        "email",
        "segmentation",
        "cdp"
    ],
    "homepage": "https://github.com/ideacrafters/laravel-dittofeed",
    "license": "MIT",
    "authors": [
        {
            "name": "Amar Neche",
            "email": "amarneche@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2|^8.3",
        "illuminate/contracts": "^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "larastan/larastan": "^2.0|^3.0",
        "laravel/pint": "^1.14",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.0|^2.0",
        "phpstan/phpstan-phpunit": "^1.0|^2.0",
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Ideacrafters\\Dittofeed\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ideacrafters\\Dittofeed\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ideacrafters\\Dittofeed\\DittofeedServiceProvider"
            ],
            "aliases": {
                "Dittofeed": "Ideacrafters\\Dittofeed\\Facades\\Dittofeed"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
